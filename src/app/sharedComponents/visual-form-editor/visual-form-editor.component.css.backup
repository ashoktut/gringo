}

.section-header {
  padding: 16px 20px;
  background: #f8fafc;
  border-bottom: 1px solid #e2e8f0;
}

.section-title-container {
  display: flex;
  align-items: center;
  gap: 12px;
  flex: 1;
}

.section-icon {
  color: #1976d2;
  font-size: 20px;
}

.section-info {
  flex: 1;
}

.section-title {
  margin: 0;
  font-size: 16px;
  font-weight: 600;
