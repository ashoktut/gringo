  }

  .center-content {
    flex: 1;
  }

  .form-builder-content {
    padding: 12px;
  }

  .sections-toolbar {
    padding: 16px;
    flex-direction: column;
    gap: 12px;
    text-align: center;
  }

  .section-card {
    margin-bottom: 16px;
  }

  .section-header {
    padding: 16px;
    flex-direction: column;
    gap: 12px;
    min-height: auto;
  }

  .section-title-container {
    width: 100%;
    justify-content: center;
  }

  .section-actions {
    width: 100%;
    justify-content: center;
  }
