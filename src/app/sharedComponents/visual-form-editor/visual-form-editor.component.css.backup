  .field-palette-sidebar.mobile-panel-active,
  .properties-sidebar.mobile-panel-active {
    transform: translateX(0);
  }

  .properties-sidebar {
    transform: translateX(100%);
  }

  .center-content {
    border-radius: 16px;
    grid-column: 1;
    grid-row: 2;
  }

  .mobile-close {
    display: block !important;
  }

  .header-content {
    flex-direction: column;
    gap: 16px;
    text-align: center;
  }

  .header-actions {
    justify-content: center;
  }

  .header-actions .button-text {
    display: none;
  }

  .header-actions button {
    min-width: 48px;
    padding: 12px;
  }


@media (max-width: 768px) {
  .header-content {
    padding: 16px 20px;
  }

  .editor-layout {
    padding: 8px;
    height: calc(100vh - 120px);
  }

  .palette-content,
  .properties-content {
    padding: 16px;
  }

  .form-builder-content,
  .preview-content {
    padding: 16px;
  }

  .sections-toolbar {
    padding: 16px 20px;
    flex-direction: column;
    gap: 12px;
  }

  .toolbar-title {
    font-size: 16px;
  }

  .empty-state {
    padding: 40px 20px;
  }

  .empty-state h3 {
    font-size: 20px;
  }

  .field-content {
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
  }

  .field-actions {
    align-self: flex-end;
  }

  .header-text h1 {
    font-size: 24px;
  }

  .header-text p {
    font-size: 14px;
  }
}

@media (max-width: 480px) {
  .header-text h1 {
    font-size: 20px;
  }

  .header-text p {
    font-size: 12px;
  }

  .editor-layout {
    padding: 4px;
    height: calc(100vh - 100px);
  }

  .palette-header span,
  .properties-header span {
    font-size: 16px;
  }

  .toolbar-title span {
    font-size: 14px;
  }

  .section-header {
    padding: 16px 20px;
  }

  .section-title {
    font-size: 16px;
  }

  .field-item {
    padding: 12px 16px;
  }

  .property-fields {
    padding: 16px;
  }

  .field-actions-section {
    padding: 16px;
  }

  .mobile-nav button {
    min-width: 70px;
