  }

  .header-actions {
    flex-direction: column;
    gap: 8px;
  }

  .action-btn {
    width: 100%;
    justify-content: center;
  }

  .form-builder-content {
    padding: 8px;
  }

  .sections-toolbar {
    padding: 12px;
  }

  .toolbar-title {
    font-size: 14px;
  }

  .section-header {
    padding: 12px;
  }

  .section-title {
    font-size: 16px;
  }

  .section-icon {
    padding: 8px;
    font-size: 20px;
    width: 20px;
    height: 20px;
  }
