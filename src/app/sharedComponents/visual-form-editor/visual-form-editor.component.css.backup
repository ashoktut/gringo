}

.field-item:hover {
  border-color: #667eea;
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.1);
}

.field-item.selected-field {
  border-color: #667eea;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
}

.field-content {
  padding: 12px 16px;
}

.field-main {
  display: flex;
  align-items: center;
  gap: 12px;
