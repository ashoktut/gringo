/* Full-Screen Visual Form Editor */
:host {
  display: block;
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: var(--azure-surface-variant);
  font-family: 'Roboto', -apple-system, BlinkMacSystemFont, sans-serif;
  --azure-primary: #2563eb;
  --azure-primary-light: #3b82f6;
  --azure-primary-dark: #1d4ed8;
  --azure-secondary: #64748b;
  --azure-accent: #0ea5e9;
  --azure-surface: #ffffff;
  --azure-surface-variant: #f8fafc;
  --azure-outline: #e2e8f0;
  --azure-outline-variant: #cbd5e1;
  --azure-on-primary: #ffffff;
  --azure-on-surface: #1e293b;
  --azure-on-surface-variant: #64748b;
  --azure-success: #10b981;
  --azure-warning: #f59e0b;
  --azure-error: #ef4444;
}

/* Container */
.visual-editor-container {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  position: relative;
  background: var(--azure-surface-variant);
  display: flex;
  flex-direction: column;
}

/* Single Consolidated Header */
.editor-header {
  background: linear-gradient(135deg, var(--azure-primary) 0%, var(--azure-primary-dark) 100%);
  color: var(--azure-on-primary);
  border-bottom: 1px solid var(--azure-outline);
  box-shadow: 0 2px 8px rgba(37, 99, 235, 0.15);
  position: relative;
  z-index: 10;
  flex-shrink: 0;
  height: 64px;
}

.header-content {
  padding: 8px 16px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  max-width: none;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12px;
  flex: 0 0 auto;
}

.header-center {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.tab-buttons {
  display: flex;
  gap: 4px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 6px;
  padding: 4px;
}

.tab-btn {
  color: rgba(255, 255, 255, 0.7);
  border-radius: 4px;
  padding: 8px 16px;
  min-width: 120px;
  font-size: 14px;
  transition: all 0.2s;
}

.tab-btn.active {
  background: rgba(255, 255, 255, 0.2);
  color: var(--azure-on-primary);
}

.header-actions {
  display: flex;
  gap: 8px;
  align-items: center;
  flex: 0 0 auto;
}

.back-button {
  background: rgba(255, 255, 255, 0.1);
  color: var(--azure-on-primary);
  border-radius: 6px;
  width: 36px;
  height: 36px;
}

.form-info {
  display: flex;
  flex-direction: column;
}

.form-title {
  margin: 0;
  color: var(--azure-on-primary);
  font-size: 16px;
  font-weight: 600;
  line-height: 1.2;
}

.form-subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 11px;
  font-weight: 400;
  margin-top: 1px;
}

/* Header Action Buttons */
.header-actions button {
  height: 32px;
  padding: 0 12px;
  border-radius: 4px;
  font-size: 13px;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 6px;
  transition: all 0.2s ease-in-out;
}

.header-actions button span {
  white-space: nowrap;
}

.action-btn {
  background: rgba(255, 255, 255, 0.1);
  color: var(--azure-on-primary);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.action-btn:hover {
  background: rgba(255, 255, 255, 0.2);
}

.save-btn {
  background: rgba(255, 255, 255, 0.9);
  color: var(--azure-primary);
  border: none;
}

.save-btn:hover {
  background: var(--azure-on-primary);
}

/* Full-Width Editor Layout */
/* ===== MAIN LAYOUT IMPROVEMENTS ===== */

/* Full-width layout container */
.editor-layout {
  display: flex;
  height: calc(100vh - 64px);
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  flex: 1;
  margin: 0;
  padding: 0;
  width: 100%;
  max-width: none; /* Remove any width constraints */
  overflow: hidden;
}

/* ===== LEFT PANEL (Field Palette) ===== */
.field-palette-sidebar {
  width: 280px;
  min-width: 280px;
  background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
  border-right: 2px solid var(--azure-outline);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin: 0;
  flex-shrink: 0;
  box-shadow: 2px 0 12px rgba(0, 0, 0, 0.05);
  position: relative;
}

.field-palette-sidebar::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 1px;
  height: 100%;
  background: linear-gradient(180deg, transparent 0%, var(--azure-primary) 50%, transparent 100%);
  opacity: 0.3;
}

.palette-content {
  padding: 16px;
  height: 100%;
  overflow-y: auto;
  background: transparent;
}

/* ===== CENTER PANEL (Form Builder) ===== */
.center-content {
  flex: 1;
  background: #ffffff;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin: 0;
  border: none;
  position: relative;
  min-width: 0; /* Allow shrinking */
}

.center-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--azure-primary) 0%, var(--azure-accent) 100%);
  z-index: 1;
}

.form-builder-content {
  height: 100%;
  padding: 24px;
  overflow-y: auto;
  background: #ffffff;
  margin: 0;
  position: relative;
}

/* ===== RIGHT PANEL (Properties) ===== */
.properties-sidebar {
  width: 320px;
  min-width: 320px;
  background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
  border-left: 2px solid var(--azure-outline);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin: 0;
  flex-shrink: 0;
  box-shadow: -2px 0 12px rgba(0, 0, 0, 0.05);
  position: relative;
}

.properties-sidebar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 1px;
  height: 100%;
  background: linear-gradient(180deg, transparent 0%, var(--azure-primary) 50%, transparent 100%);
  opacity: 0.3;
}

.properties-content {
  padding: 16px;
  height: 100%;
  overflow-y: auto;
  background: transparent;
  flex: 1;
  margin: 0;
}

/* ===== ENHANCED CATEGORY PANELS ===== */
.category-panel {
  margin-bottom: 20px;
  border-radius: 16px;
  box-shadow: 0 4px 20px rgba(37, 99, 235, 0.1);
  border: 2px solid rgba(37, 99, 235, 0.08);
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.category-panel:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 32px rgba(37, 99, 235, 0.2);
  border-color: rgba(37, 99, 235, 0.3);
}

.category-panel ::ng-deep .mat-expansion-panel-header {
  padding: 20px 24px;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  border-radius: 16px 16px 0 0;
  transition: all 0.3s ease;
  min-height: 64px;
}

.category-panel ::ng-deep .mat-expansion-panel-header:hover {
  background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e1 100%);
}

.category-title {
  display: flex;
  align-items: center;
  gap: 16px;
  font-weight: 600;
  color: var(--azure-primary);
  font-size: 15px;
}

.category-title mat-icon {
  background: linear-gradient(135deg, var(--azure-primary) 0%, var(--azure-accent) 100%);
  color: white;
  padding: 10px;
  border-radius: 12px;
  font-size: 22px;
  width: 22px;
  height: 22px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
}

/* ===== ENHANCED FIELD PALETTE ITEMS ===== */
.field-palette {
  display: grid;
  gap: 12px;
  padding: 16px;
}

.palette-field-item {
  padding: 16px;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border: 2px solid var(--azure-outline);
  border-radius: 12px;
  cursor: grab;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  display: flex;
  align-items: center;
  gap: 14px;
  position: relative;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
}

.palette-field-item:hover {
  border-color: var(--azure-primary);
  box-shadow: 0 6px 20px rgba(37, 99, 235, 0.2);
  transform: translateY(-2px);
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
}

.palette-field-item:active {
  cursor: grabbing;
  transform: scale(0.98) translateY(-1px);
  box-shadow: 0 8px 24px rgba(37, 99, 235, 0.3);
}

.field-icon-container {
  width: 40px;
  height: 40px;
  border-radius: 10px;
  background: linear-gradient(135deg, var(--azure-primary) 0%, var(--azure-accent) 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
  transition: all 0.3s ease;
}

.palette-field-item:hover .field-icon-container {
  transform: scale(1.1) rotate(5deg);
  box-shadow: 0 6px 16px rgba(37, 99, 235, 0.4);
}

.field-icon {
  font-size: 22px;
  width: 22px;
  height: 22px;
}

.field-info {
  flex: 1;
  min-width: 0;
}

.field-label {
  font-weight: 600;
  color: var(--azure-on-surface);
  margin-bottom: 4px;
  font-size: 14px;
  display: block;
  line-height: 1.3;
}

.field-type {
  color: var(--azure-on-surface-variant);
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-weight: 500;
}

.drag-handle {
  color: var(--azure-on-surface-variant);
  font-size: 18px;
  opacity: 0.6;
  transition: all 0.2s ease;
}

.palette-field-item:hover .drag-handle {
  opacity: 1;
  color: var(--azure-primary);
}

.field-type {
  color: #64748b;
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.drag-handle {
  color: #94a3b8;
  cursor: grab;
  transition: color 0.3s ease;
}

.palette-field-item:hover .drag-handle {
  color: #1976d2;
}

/* Center Content - Form Builder */
.center-content {
  flex: 1;
  background: var(--azure-surface);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin: 0;
  border: none;
}

.form-builder-content {
  height: 100%;
  padding: 16px;
  overflow-y: auto;
  background: var(--azure-surface);
  margin: 0;
}

.editor-tabs ::ng-deep .mat-ink-bar {
  background: var(--azure-primary);
  height: 2px;
}

.form-builder-content,
.preview-content {
  height: calc(100% - 64px);
  padding: 16px;
  overflow-y: auto;
  background: var(--azure-surface);
  flex: 1;
  position: relative;
}

/* ===== ENHANCED SECTIONS TOOLBAR ===== */
.sections-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 24px;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  border-radius: 16px;
  margin-bottom: 24px;
  border: 2px solid rgba(37, 99, 235, 0.1);
  position: relative;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(37, 99, 235, 0.08);
  transition: all 0.3s ease;
}

.sections-toolbar:hover {
  box-shadow: 0 6px 28px rgba(37, 99, 235, 0.12);
  border-color: rgba(37, 99, 235, 0.2);
}

.sections-toolbar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--azure-primary) 0%, var(--azure-accent) 100%);
}

.toolbar-title {
  display: flex;
  align-items: center;
  gap: 14px;
  font-weight: 600;
  color: var(--azure-on-surface);
  font-size: 16px;
}

.toolbar-title mat-icon {
  background: linear-gradient(135deg, var(--azure-primary) 0%, var(--azure-accent) 100%);
  color: white;
  padding: 10px;
  border-radius: 12px;
  font-size: 24px;
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
}

.sections-toolbar button[mat-fab] {
  box-shadow: 0 6px 20px rgba(37, 99, 235, 0.3);
  transform: scale(0.9);
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.sections-toolbar button[mat-fab]:hover {
  transform: scale(1);
  box-shadow: 0 8px 28px rgba(37, 99, 235, 0.4);
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shimmer 4s infinite;
}

.toolbar-title {
  display: flex;
  align-items: center;
  gap: 12px;
  font-weight: 600;
  color: #1976d2;
  font-size: 16px;
  position: relative;
  z-index: 2;
}

.toolbar-title mat-icon {
  background: linear-gradient(135deg, #1976d2 0%, #42a5f5 100%);
  color: white;
  padding: 8px;
  border-radius: 8px;
  font-size: 18px;
  box-shadow: 0 2px 8px rgba(25, 118, 210, 0.3);
}

.sections-toolbar button {
  position: relative;
  z-index: 2;
  background: linear-gradient(135deg, #1976d2 0%, #42a5f5 100%);
  color: white;
  border-radius: 10px;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  width: 36px;
  height: 36px;
  box-shadow: 0 2px 8px rgba(25, 118, 210, 0.3);
}

.sections-toolbar button:hover {
  transform: scale(1.05);
  box-shadow: 0 4px 16px rgba(25, 118, 210, 0.4);
}

/* Sections Container */
.sections-container {
  display: grid;
  gap: 16px;
  position: relative;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 60px 32px;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 20px;
  border: 3px dashed rgba(25, 118, 210, 0.2);
  position: relative;
  overflow: hidden;
}

.empty-state::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at center, rgba(25, 118, 210, 0.05) 0%, transparent 70%);
  animation: pulse 2s ease-in-out infinite;
}

.empty-icon {
  font-size: 80px;
  color: rgba(25, 118, 210, 0.3);
  margin-bottom: 20px;
  position: relative;
  z-index: 2;
}

.empty-state h3 {
  margin: 0 0 12px 0;
  color: #1976d2;
  font-weight: 600;
  font-size: 24px;
  position: relative;
  z-index: 2;
}

.empty-state p {
  margin: 0 0 32px 0;
  color: #64748b;
  font-size: 16px;
  position: relative;
  z-index: 2;
}

.empty-state button {
  position: relative;
  z-index: 2;
  background: linear-gradient(135deg, #1976d2 0%, #42a5f5 100%);
  color: white;
  border-radius: 12px;
  padding: 12px 24px;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.empty-state button:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 32px rgba(25, 118, 210, 0.3);
}

/* ===== ENHANCED SECTION CARDS ===== */
.section-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border: 2px solid rgba(37, 99, 235, 0.1);
  border-radius: 20px;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
  cursor: pointer;
  position: relative;
  margin-bottom: 20px;
  box-shadow: 0 4px 16px rgba(37, 99, 235, 0.08);
}

.section-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--azure-primary) 0%, var(--azure-accent) 100%);
  transform: scaleX(0);
  transition: transform 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.section-card:hover::before {
  transform: scaleX(1);
}

.section-card:hover {
  border-color: var(--azure-primary);
  box-shadow: 0 8px 32px rgba(37, 99, 235, 0.2);
  transform: translateY(-4px);
}

.section-card.selected-section {
  border-color: var(--azure-primary);
  background: linear-gradient(135deg, rgba(37, 99, 235, 0.06) 0%, rgba(37, 99, 235, 0.03) 100%);
  box-shadow: 0 8px 32px rgba(37, 99, 235, 0.25);
  transform: translateY(-2px);
}

.section-card.selected-section::before {
  transform: scaleX(1);
}

/* ===== ENHANCED SECTION HEADER ===== */
.section-header {
  padding: 20px 24px;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  border-bottom: 2px solid rgba(37, 99, 235, 0.08);
  display: flex;
  align-items: center;
