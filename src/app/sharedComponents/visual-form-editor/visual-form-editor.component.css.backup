  .center-content {
    border-radius: 16px;
  }
}

/* CDK Drag Drop Styles */
.cdk-drag-preview {
  box-sizing: border-box;
  border-radius: 12px;
  box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
  background: white;
  border: 2px solid #667eea;
}

.cdk-drag-placeholder {
  opacity: 0.4;
  border: 2px dashed #cbd5e1;
  background: #f8fafc;
}

.cdk-drop-list-receiving .cdk-drag {
  transform: rotate(5deg);
}

.cdk-drag-animating {
  transition: transform 250ms cubic-bezier(0, 0, 0.2, 1);
}

/* Animation Classes */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.section-card,
.field-item {
  animation: fadeInUp 0.3s ease-out;
}

/* Loading States */
.loading-spinner {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32px;
}

/* Success/Error States */
.success-snackbar {
  background: #10b981;
}

.error-snackbar {
  background: #ef4444;
}

.field-palette-panel mat-card-title {
  font-size: 18px;
  color: #333;
  display: flex;
  align-items: center;
  gap: 8px;
}

.field-palette-panel mat-card-subtitle {
  color: #666;
  font-size: 13px;
}

.palette-category {
  margin-bottom: 8px;
}

.palette-category mat-expansion-panel-header {
  height: 48px;
}

.palette-category mat-panel-title {
  display: flex;
  align-items: center;
  gap: 8px;
  font-weight: 500;
}

.field-palette {
  padding: 8px 0;
  min-height: 60px;
}

.palette-field {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 16px;
  margin: 4px 0;
  background: white;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  cursor: move;
  transition: all 0.2s ease;
  user-select: none;
}

.palette-field:hover {
  background: #f5f5f5;
  border-color: #1976d2;
  box-shadow: 0 2px 4px rgba(25, 118, 210, 0.1);
}

.palette-field mat-icon:first-child {
  color: #1976d2;
  font-size: 20px;
}

.palette-field span {
  flex: 1;
  font-size: 14px;
  font-weight: 500;
}

.palette-field .drag-handle {
  color: #999;
  font-size: 18px;
}

/* Center Panel - Form Builder */
.form-builder-panel {
  background: white;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  overflow: hidden;
}

.editor-tabs {
  height: 100%;
}

.editor-tabs ::ng-deep .mat-tab-group {
  height: 100%;
}

.editor-tabs ::ng-deep .mat-tab-body-wrapper {
  height: calc(100% - 48px);
  overflow-y: auto;
}

.form-structure-content {
  padding: 16px;
  height: 100%;
}

.sections-manager {
  height: 100%;
  overflow-y: auto;
}

.sections-manager mat-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 8px;
}

.sections-manager mat-card-title {
  font-size: 18px;
  color: #333;
}

.section-panel {
  margin-bottom: 12px;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
}

.section-panel mat-expansion-panel-header {
  padding: 16px;
}

.section-panel mat-panel-title {
  display: flex;
  align-items: center;
  gap: 8px;
  font-weight: 500;
}

.section-panel mat-panel-description {
  color: #666;
  font-size: 13px;
}

.section-controls {
  display: grid;
  grid-template-columns: 1fr 1fr auto;
  gap: 16px;
  align-items: start;
  margin-bottom: 16px;
}

.section-title-field,
.section-description-field {
  flex: 1;
}

.section-actions {
  display: flex;
  gap: 8px;
}

.fields-drop-zone {
  min-height: 120px;
  border: 2px dashed #e0e0e0;
  border-radius: 8px;
  padding: 16px;
  margin-top: 16px;
  background: #fafafa;
  transition: all 0.3s ease;
}

.fields-drop-zone.cdk-drop-list-dragging {
  border-color: #1976d2;
  background: #e3f2fd;
}

.empty-fields-message {
  text-align: center;
  color: #999;
  padding: 32px 16px;
}

.empty-fields-message mat-icon {
  font-size: 48px;
  width: 48px;
  height: 48px;
  color: #ccc;
  margin-bottom: 8px;
}

.empty-fields-message p {
  margin: 0;
  font-size: 14px;
}

.form-field-item {
  background: white;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  margin-bottom: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.form-field-item:hover {
  border-color: #1976d2;
  box-shadow: 0 2px 4px rgba(25, 118, 210, 0.1);
}

.form-field-item.selected {
  border-color: #1976d2;
  background: #e3f2fd;
  box-shadow: 0 2px 8px rgba(25, 118, 210, 0.2);
}

.form-field-item.cdk-drag-animating {
  transition: transform 250ms cubic-bezier(0, 0, 0.2, 1);
}

.field-header {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px;
}

.field-type-icon {
  color: #1976d2;
  font-size: 24px;
  width: 24px;
  height: 24px;
}

.field-info {
  flex: 1;
}

.field-name {
  font-weight: 500;
  font-size: 14px;
  color: #333;
}

.field-details {
  font-size: 12px;
  color: #666;
  margin-top: 2px;
}

.field-badges {
  display: flex;
  gap: 4px;
}

.field-badges mat-chip {
  font-size: 11px;
  height: 24px;
  line-height: 24px;
}

.field-actions {
  display: flex;
  align-items: center;
  gap: 4px;
}

.field-actions button {
  opacity: 0.7;
}

.field-actions button:hover {
  opacity: 1;
}

.drag-handle {
  color: #999;
  cursor: move;
}

/* Form Preview */
.form-preview-content {
  padding: 16px;
  height: 100%;
  overflow-y: auto;
}

.preview-card {
  height: fit-content;
}

.preview-card mat-card-header mat-card-title {
  display: flex;
  align-items: center;
  gap: 8px;
  color: #1976d2;
}

/* Right Panel - Field Properties */
.field-properties-panel {
  overflow-y: auto;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.field-properties-panel mat-card-header {
  padding-bottom: 8px;
}

.field-properties-panel mat-card-title {
  font-size: 18px;
  color: #333;
}

.field-properties-panel mat-card-subtitle {
  color: #666;
  font-size: 13px;
}

.field-properties-form {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.property-section {
  padding: 16px 0;
}

.property-section h4 {
  margin: 0 0 16px 0;
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.property-section h5 {
  margin: 0 0 8px 0;
  font-size: 14px;
  font-weight: 500;
  color: #333;
}

.section-description {
  font-size: 13px;
  color: #666;
  margin: 0 0 16px 0;
  line-height: 1.4;
}

.full-width {
  width: 100%;
  margin-bottom: 16px;
}

.checkbox-group {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 16px;
}

.checkbox-group mat-checkbox {
  font-size: 14px;
}

.options-section {
  margin-top: 16px;
}

.options-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.option-row {
  display: grid;
  grid-template-columns: 1fr 1fr auto;
  gap: 8px;
  align-items: start;
  margin-bottom: 12px;
}

.option-row mat-form-field {
  margin-bottom: 0;
}

.no-field-selected {
  text-align: center;
  padding: 48px 16px;
  color: #666;
}

.no-field-selected mat-icon {
  font-size: 64px;
  width: 64px;
  height: 64px;
  color: #ccc;
  margin-bottom: 16px;
}

.no-field-selected h3 {
  margin: 0 0 8px 0;
  font-size: 18px;
  font-weight: 500;
}

.no-field-selected p {
  margin: 0;
  font-size: 14px;
  line-height: 1.4;
}

/* Drag and Drop Styling */
.cdk-drag-preview {
  box-sizing: border-box;
  border-radius: 8px;
  box-shadow: 0 8px 16px rgba(0,0,0,0.2);
  background: white;
  border: 1px solid #1976d2;
}

.cdk-drag-placeholder {
  opacity: 0.5;
  border: 2px dashed #1976d2;
  background: #e3f2fd;
}

.cdk-drop-list-dragging .cdk-drag {
  transition: transform 250ms cubic-bezier(0, 0, 0.2, 1);
}

/* Responsive Design */
@media (max-width: 1200px) {
  .editor-layout {
    grid-template-columns: 250px 1fr 300px;
  }
}

@media (max-width: 768px) {
  .editor-layout {
    grid-template-columns: 1fr;
    grid-template-rows: auto auto auto;
    height: auto;
  }

  .field-palette-panel,
  .field-properties-panel {
    height: auto;
    max-height: 400px;
  }

  .form-builder-panel {
    height: 600px;
  }

  .section-controls {
    grid-template-columns: 1fr;
    gap: 12px;
  }

  .option-row {
    grid-template-columns: 1fr;
    gap: 8px;
  }
}

/* Success/Error Snackbar Styles */
::ng-deep .success-snackbar {
  background-color: #4caf50 !important;
  color: white !important;
}

::ng-deep .error-snackbar {
  background-color: #f44336 !important;
  color: white !important;
}

/* Animation Enhancements */
.form-field-item {
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.palette-field {
  animation: fadeIn 0.2s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* Focus States for Accessibility */
.palette-field:focus-visible,
.form-field-item:focus-visible {
  outline: 2px solid #1976d2;
  outline-offset: 2px;
}

/* Custom Scrollbar */
.field-palette-panel::-webkit-scrollbar,
.field-properties-panel::-webkit-scrollbar,
.form-structure-content::-webkit-scrollbar {
  width: 6px;
}

.field-palette-panel::-webkit-scrollbar-track,
.field-properties-panel::-webkit-scrollbar-track,
.form-structure-content::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 3px;
}

.field-palette-panel::-webkit-scrollbar-thumb,
.field-properties-panel::-webkit-scrollbar-thumb,
.form-structure-content::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 3px;
}

.field-palette-panel::-webkit-scrollbar-thumb:hover,
.field-properties-panel::-webkit-scrollbar-thumb:hover,
.form-structure-content::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
}
